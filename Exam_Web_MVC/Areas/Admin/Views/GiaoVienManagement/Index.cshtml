@model PagedList.IPagedList<Exam_Web_MVC.Models.GiaoVienEntity>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách giáo viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    int stt = ViewBag.stt;
}
<div class="card">
    <div class="card-header">
        <h2>Danh sách giáo viên</h2>
        <a class="btn btn-primary rounded-pill" href="@Url.Action("Create","GiaoVienManagement")">Thêm Giáo Viên</a>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên giáo viên</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Email</th>
                    <th>Học vị</th>
                    <th>Bộ môn</th>
                    <th>Username</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenGV)
                        </td>
                        <td>
                            @string.Format("{0:dd/MM/yyyy}", item.NgaySinh)
                        </td>
                        <td>
                            @if (item.GioiTinh == true)
                            {
                                <span>Nam</span>
                            }
                            else
                            {
                                <span>Nữ</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HocVi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MonHoc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            <div class="text-center">
                                <a href="@Url.Action("Edit","GiaoVienManagement",new { id=item.GiaoVienID})"><i class="far fa-edit" style="font-size:22px;" title="Sửa Thông Tin Giáo Viên"></i></a>
                                <a href="@Url.Action("Delete","GiaoVienManagement",new { id=item.GiaoVienID})" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')"><i class="far fa-trash-alt" style="font-size:22px;" title="Xóa Giáo Viên"></i></a>
                            </div>
                        </td>
                    </tr>

                    stt++;
                }
            </tbody>
        </table>
    </div>
</div>


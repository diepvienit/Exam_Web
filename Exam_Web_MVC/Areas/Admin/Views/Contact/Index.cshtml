@model PagedList.IPagedList<Exam_Web_MVC.Models.LienHeEntity>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Danh Sách Đề Thi</h2>
    </div>
    <div class="box-action">
        @using (Html.BeginForm("Index", "Contact", FormMethod.Get, new { @class = "form-inline margin-bottom", @role = "form" }))
        {
            <div class="form-group">
                @Html.TextBox("keysearch", null, new { @class = "form-control", @placeholder = "Tìm tên..." })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
            </div>
        }
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>Thời gian</th>
                <th>Nội dung</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoVaTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayGui)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhanHoi)
                    </td>
                </tr>
            }
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, keysearch = ViewBag.keysearch }))
    </div>
</div>




@model Exam_Web_Core.CauHoi
@{
    ViewBag.Title = "Thêm mới câu hỏi";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>@ViewBag.Title</h2>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary rounded-pill btn-comeback" })
    </div>
    @using (Html.BeginForm("Create", "CauHoiManagement", FormMethod.Post, new { enctype = "multipart/form-data", @role = "form" }))
    {
        <div class="box-action">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
        <div class="card-body">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="header-create">Môn @ViewBag.tenmonhoc</div>
                <div class="form-group">
                    <div class="control-label col-md-2">Ảnh</div>
                    <div class="col-md-10" style="display: flex;">
                        <input type="file" name="urlImage" id="urlImage" />
                        <button type="button" class="btn btn-default" id="btnDeleteImage">Xóa</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">Nội dung câu hỏi</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NoiDungCauHoi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoiDungCauHoi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">Đáp án A</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Answer_A, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Answer_A, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">Đáp án B</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Answer_B, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Answer_B, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">Đáp án C</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Answer_C, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Answer_C, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">Đáp án D</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Answer_D, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Answer_D, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">Câu trả lời đúng</div>
                    <div class="col-md-10">
                        <select class="form-control" name="CauTraLoiDung">
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">Độ khó</div>
                    <div class="col-md-10">
                        @Html.DropDownList("DoKhoID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MonHocID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnDeleteImage').click(function () {
            $('#urlImage').val('');
        });
    });
</script>
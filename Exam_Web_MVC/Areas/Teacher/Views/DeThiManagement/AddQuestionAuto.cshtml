@{
    ViewBag.Title = "Thêm câu hỏi tự động";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Thêm Câu Hỏi Cho Đề "@ViewBag.TenDeThi"</h2>
        @Html.ActionLink("Quay lại", "Details", new { id = ViewBag.id }, new { @class = "btn btn-secondary rounded-pill btn-comeback" })
    </div>
    <div class="box-action">
        <input type="submit" class="btn btn-primary" value="Thêm Câu Hỏi" />
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group row">
                <label class="col-sm-2 control-label">Số Câu Dễ:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" name="SoCauDe" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">Số Câu Trung Bình:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" name="SoCauTrungBinh" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">Số Câu Khó:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" name="SoCauKho" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">Số Câu Rất Khó:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" name="SoCauRatKho" />
                </div>
            </div>
        </form>
    </div>
</div>


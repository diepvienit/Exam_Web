
@{
    ViewBag.Title = "Thêm câu hỏi thủ công";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Thêm Câu Hỏi Cho Đề "@ViewBag.TenDeThi"</h2>
        @Html.ActionLink("Quay lại", "Details", new { id = ViewBag.id }, new { @class = "btn btn-secondary rounded-pill btn-comeback" })
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Nội dung câu hỏi
                    </th>
                    <th style="width: 30px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.CauHois != null)
                {
                    int countRow = 0;
                    foreach (var item in ViewBag.CauHois)
                    {
                        <tr>
                            @{ countRow++;}
                            <td>@countRow</td>
                            <td>@item.NoiDungCauHoi</td>
                            <td>
                                @Html.ActionLink("Thêm", "AddQuestion", new { id = item.CauHoiID }, null)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>



